<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@drawable/gradient_bf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Information :"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textStyle="bold"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:background="@drawable/gradient_bf"
            android:layout_marginTop="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bf"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/pro_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"
                    android:contentDescription="Profile photo"
                    app:shapeAppearanceOverlay="@style/OvalImage"
                    app:strokeColor="@color/white"
                    app:strokeWidth="0dp"/>

                <TextView
                    android:id="@+id/pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textColor="@color/light_blue_900"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/pro_clg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/pro_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roll No :"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="@color/purple_500"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/pro_roll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reg No :"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="@color/purple_500"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/pro_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="16sp"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:background="@drawable/gradient_bf"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textColor="@color/purple_500"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Date of Birth     :"
                        android:drawableStart="@drawable/icon_birthdate"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/pro_dob"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Phone No          :"
                        android:drawableStart="@drawable/icon_phone"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/pro_phno"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="N/A"
                        android:autoLink="phone"
                        android:linksClickable="true"
                        android:textColorLink="@color/green"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Email Id             :"
                        android:drawableStart="@drawable/baseline_mail_24"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/pro_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:text="N/A"
                            android:linksClickable="true"
                            android:autoLink="email"
                            android:textColorLink="@color/green"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:background="?android:attr/selectableItemBackground"/>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="CGPA                 :"
                        android:drawableStart="@drawable/icon_sem"
                        android:drawablePadding="10dp"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/pro_cgpa"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:background="@drawable/gradient_bf"
            android:layout_marginTop="25dp">


            <LinearLayout
                android:id="@+id/llCgpaList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bf"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCgpaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGPA Result"
                    android:textColor="@color/purple_500"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/llS1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 1         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 2         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 3         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:text="N/A"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 4         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:text="N/A"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 5         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:text="N/A"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 6         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:padding="8dp"
                        android:text="N/A"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 7         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:text="N/A"
                        android:textColor="@color/gray"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llS8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_600"
                        android:text="Semester 8         :"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tv_pro8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:padding="8dp"
                        android:background="?android:attr/selectableItemBackground"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCgpaTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter GPA for semester to calculate CGPA"
                    android:textColor="@color/light_blue_900"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:paddingBottom="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfomanace"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_height="200dp"
            android:paddingEnd="20dp"
            android:background="@drawable/gradient_bf"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_SemDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Details"
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/con_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="6dp"
                android:layout_marginStart="10dp"
                android:padding="10dp">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="@color/purple_500">
                </TableLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
